@using Infrastructure.Models;
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    System.Diagnostics.Debug.WriteLine($"Is In Role Customer: {User.IsInRole("Customer")}");
    System.Diagnostics.Debug.WriteLine($"Is In Role Admin: {User.IsInRole("Admin")}");
    System.Diagnostics.Debug.WriteLine($"Is In Role Restaurant: {User.IsInRole("Restaurant")}");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Food_Ordering_Web</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.9/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

      <style>
        body {
            margin-top: 60px;
            margin-bottom: 0px;
        }
        /* Ensure the main content takes up the minimum space so the footer stays at the bottom */
  
      .footer {
        background-color: #343a40; /* Dark background for contrast */
        color: #fff; /* White text */
        padding: 40px 0 0 0; /* Top padding 40px, Right 0, Bottom 0, Left 0 */
    }
   
    .footer h5 {
        font-weight: bold;
        margin-bottom: 20px;
    }
    .footer a {
        color: #d1d1d1; /* Light grey text */
        text-decoration: none;
        margin-bottom: 10px;
        display: block; /* Makes the entire area clickable */
    }
    .footer a:hover {
        color: #f8f9fa; /* Slightly brighter on hover */
    }
    .footer .social-icons a {
        font-size: 20px; /* Larger icons */
        margin-right: 15px;
    }
    .footer .social-icons a:hover {
        color: #007bff; /* Brand color on hover */
    }
    </style>
       
</head>
<body>
    <nav class="navbar bg-body-tertiary fixed-top">
     
      

        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="orderStatus"></div>
            <!-- Replacing the brand name with buttons -->
            <!-- ... (above part remains unchanged) -->
            <div class="ms-auto d-flex align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="me-2">
                        <a class="btn btn-outline-primary" href="@Url.Action("Index", "UserProfile")">
                            Profile
                        </a>
                    </div>
                    <div class="me-2">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-danger">Logout</button>
                        </form>

                    </div>
                }
                else
                {
                    <!-- Unauthenticated user links -->
                    <button type="button" class="btn btn-light text-dark me-2"><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a></button>
                    <button type="button" class="btn btn-primary"><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a></button>
                }
            </div>

            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <!-- Wide buttons for Log In and Sign Up -->
                        <div class="d-flex flex-column mb-3">
                            <button type="button" class="btn btn-light text-dark mb-2 w-100">Log In</button>
                            <button type="button" class="btn btn-primary w-100">Sign Up</button>
                        </div>
                    }

                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        @if (User.IsInRole("Customer"))
                        {
                            <!-- Customer-specific links -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("MyOrders", "User")">My Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("UserProfile", "User")">Profile</a>
                            </li>
                        }
                        else if (User.IsInRole("Restaurant"))
                        {
                            <!-- Restaurant-specific links -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Restaurant")">Outlets</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("ManageOrders", "Restaurant")">Manage Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Profile", "Home")">Restaurant Profile</a>
                            </li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <!-- Admin-specific links -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("AdminDashboard", "Admin")">Dashboard</a>
                            </li>
                        }
                        else
                        {
                            <!-- Links for unauthenticated users or other roles -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About Us</a>
                            </li>
                        }
                    </ul>

                    <form class="d-flex mt-3" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>

        </div>
          <!-- Centered Logo and Name -->
        <div class="mx-auto">
            <a class="navbar-brand" href="#">
                <img src="/Images/logo.jpeg" alt="Logo" style="height: 40px;"> <!-- Adjust the path and size as needed -->
                <span class="ms-2">Restro</span>
            </a>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer class="footer text-center text-lg-start">
    <div class="container">
        <div class="row">
            <!-- Social Media Links -->
            <div class="col-md-4 footer-column">
                <h5>Follow Us</h5>
                <div class="social-icons">
                    <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                    <!-- Add more icons as needed -->
                </div>
            </div>
            <!-- Quick Links -->
            <div class="col-md-4 footer-column">
                <h5>Quick Links</h5>
                <a href="#">Home</a>
                <a href="#">About Us</a>
                <a href="#">Contact</a>
                <!-- Add more links as needed -->
            </div>
            <!-- About Us -->
            <div class="col-md-4 footer-column">
                <h5>About Restro</h5>
                <p>Your brief introduction or mission statement here.</p>
            </div>
        </div>
    </div>
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        © 2024 Restro. All rights reserved.
    </div>
</footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
