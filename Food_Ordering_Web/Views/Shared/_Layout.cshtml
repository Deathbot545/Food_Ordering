@using Infrastructure.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Food_Ordering_Web</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="https://js.stripe.com/v3/"></script>
    <style>
        body {
            margin-top: 60px; /* Add this line */
            margin-bottom: 60px;
        }</style>
</head>
<body>
    <nav class="navbar bg-body-tertiary fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Replacing the brand name with buttons -->
            <!-- ... (above part remains unchanged) -->
            <div class="ms-auto d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="me-2">
                        <a class="btn btn-outline-primary" href="@Url.Action("UserProfile", "User")">
                            Profile
                        </a>
                    </div>
                    <div class="me-2">
                        <a class="btn btn-outline-danger" href="@Url.Action("Logout", "Account")">
                            Logout
                        </a>
                    </div>
                }
                else
                {
                    <!-- Unauthenticated user links -->
                    <button type="button" class="btn btn-light text-dark me-2"><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a></button>
                    <button type="button" class="btn btn-primary"><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a></button>
                }
            </div>


            <!-- ... (below part remains unchanged) -->


            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <!-- Wide buttons for Log In and Sign Up -->
                        <div class="d-flex flex-column mb-3">
                            <button type="button" class="btn btn-light text-dark mb-2 w-100">Log In</button>
                            <button type="button" class="btn btn-primary w-100">Sign Up</button>
                        </div>
                    }

                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        @if (User.IsInRole("Customer"))
                        {
                            <!-- Customer-specific links -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("MyOrders", "User")">My Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("UserProfile", "User")">Profile</a>
                            </li>
                        }
                        else if (User.IsInRole("Restaurant"))
                        {
                            <!-- Restaurant-specific links -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Outlets", "Restaurant")">Outlets</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("ManageOrders", "Restaurant")">Manage Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("RestaurantProfile", "Restaurant")">Restaurant Profile</a>
                            </li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <!-- Admin-specific links -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("AdminDashboard", "Admin")">Dashboard</a>
                            </li>
                        }
                        else
                        {
                            <!-- Links for unauthenticated users or other roles -->
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About Us</a>
                            </li>
                        }
                    </ul>

                    <form class="d-flex mt-3" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>

        </div>
    </nav>



  
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Food_Ordering_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
