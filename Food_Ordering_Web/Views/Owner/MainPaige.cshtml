<style>
    /* Add CSS for the QR code size */
    .qr-code-img {
        max-width: 150px; /* Adjust the size as needed */
        height: auto;
        display: block;
        margin: 0 auto; /* Center the QR code horizontally */
    }
</style>
<main class="container">
    <div class="p-3 p-md-4 mb-3 rounded text-body-emphasis bg-body-secondary">
        <div class="col-lg-12 px-0">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="display-4 fst">List of Outlets</h1>
                <div>
                    <button type="button" class="btn btn-primary"><a class="dropdown-item" asp-area="" asp-controller="Restaurant" asp-action="Add">Add</a></button>
                    <div class="dropdown d-inline">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Action
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="actionDropdown">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Restaurant" asp-action="Manage">Manage</a></li>
                            <li><a class="dropdown-item" href="#">Action 2</a></li>
                            <li><a class="dropdown-item" href="#">Action 3</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover w-100">
                    <thead>
                        <tr>
                            <th scope="col">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="checkAll">
                                    <label class="form-check-label" for="checkAll">Select All</label>
                                </div>
                            </th>
                            <th scope="col">Customer-Facing Name</th>
                            <th scope="col">Business Type</th>
                            <th scope="col">Date Opened</th>
                            <th scope="col">Employee Count</th>
                            <th scope="col">Operating Hours</th>
                            <th scope="col">Contact</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Updated At</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var outlet in Model)
                        {
                            <tr data-id="@outlet.Id">
                                <th scope="row">
                                    <div class="form-check">
                                        <input class="form-check-input checkbox-item" type="checkbox">
                                    </div>
                                </th>
                                <td>@outlet.CustomerFacingName</td>
                                <td>@outlet.BusinessType</td>
                                <td>@outlet.DateOpened.ToShortDateString()</td>
                                <td>@outlet.EmployeeCount</td>
                                <td>@outlet.OperatingHoursStart.ToString(@"hh\:mm") - @outlet.OperatingHoursEnd.ToString(@"hh\:mm")</td>
                                <td>@outlet.Contact</td>
                                <td>@outlet.CreatedAt.ToShortDateString()</td>
                                <td>@outlet.UpdatedAt.ToShortDateString()</td>
                                <!-- Add any other fields that you'd like to display -->
                            </tr>
                        }
                    </tbody>
            </table>
            </div>
        </div>
    </div>
    <div id="outletInfo" class="mt-4 p-4 rounded  text-bg-light mb-3 ">
        <h4>Selected Outlet Information:</h4>
        <div id="outletDetails">
            <div class="row">
                <div class="col-md-5">
                    <h5>Outlet Name:</h5>
                    <p id="outletName">Outlet A</p>
                </div>
                <div class="col-md-4">
                    <h5>Location:</h5>
                    <p id="outletLocation">New York</p>
                </div>
                <div class="col-md-3">
                    <h5>Contact:</h5>
                    <p id="outletContact">+1 123-456-7890</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <h5>Status:</h5>
                    <p id="outletStatus">Open</p>
                </div>
                <div class="col-md-4">
                    <h5>Sales Volume:</h5>
                    <p id="salesVolume">$500,000</p>
                </div>
                <div class="col-md-3">
                    <h5>Ratings:</h5>
                    <p id="outletRatings">4.7 stars</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <h5>Date Opened:</h5>
                    <p id="dateOpened">Jan 1, 2020</p>
                </div>
                <div class="col-md-4">
                    <h5>Last Updated:</h5>
                    <p id="lastUpdated">Sept 20, 2023</p>
                </div>
                <div class="col-md-3">
                    <h5>Managers:</h5>
                    <p id="outletManagers">John Doe, Jane Smith</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <h5>Employee Count:</h5>
                    <p id="employeeCount">150</p>
                </div>
                <div class="col-md-4">
                    <h5>Operating Hours:</h5>
                    <p id="operatingHours">9AM - 9PM</p>
                </div>
                <div class="col-md-3">
                    <h5>QR Code:</h5>
                    <svg id="qrCode"></svg>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <h5>Customer Reviews:</h5>
                <p id="customerReviews">4.5 stars from 200 reviews</p>
            </div>
            <div class="col-md-3">
                <a class="btn btn-outline-light rounded-pill" href="#">Download QR</a>
            </div>
            <a id="viewOutletBtn" class="btn btn-outline-success rounded-pill" href="#">View Outlet</a>

        </div>
    </div>
</main>

<script>
    $(document).ready(function () {
        // Handle checkbox selection logic
        $('.checkbox-item').click(function () {
            // Deselect all checkboxes
            $('.checkbox-item').prop('checked', false);
            // Select the clicked one
            $(this).prop('checked', true);
            // Fetch the outletId from the closest row
            const outletId = $(this).closest('tr').data('id');
            fetchOutletData(outletId);
        });

        // If you need initial data, you can make an initial call here.
        // fetchOutletData(1);  // Replace with the actual outlet ID
    });


    function fetchOutletData(outletId) {
        $.ajax({
            url: `https://localhost:7115/api/Outletapi/GetOutletWithQRCode/${outletId}`,
            type: 'GET',
            crossDomain: true,

            success: function (response) {
                console.log('API Response:', response);  // Debug line
                // Populate fields based on your actual Outlet model
                $("#outletName").text(response.customerFacingName);
                $("#outletLocation").text(`${response.city}, ${response.state}`);
                $("#outletContact").text(response.contact);
                // ... Populate other fields ...

                const operatingHours = `${response.operatingHoursStart} - ${response.operatingHoursEnd}`;
                $("#operatingHours").text(operatingHours);

                // Populate QR code image
                if (response.qrCodeData) {
                    // Directly use the string as SVG content
                    $("#qrCode").html(response.qrCodeData);
                    console.log("SVG content:", response.qrCodeData);
                }
            },
            error: function (error) {
                console.error(`Error fetching outlet data: ${JSON.stringify(error)}`);
            }
        });
    }

</script>
