@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<style>
    /* Custom CSS to ensure height is 100% for centering */
    html, body {
        height: 100%;
    }
    /* Added Styling for External Login */
    .external-login-container {
        text-align: center;
        border-top: 1px solid #ccc;
        padding-top: 10px;
    }

        .external-login-container p {
            margin-right: 10px;
        }
</style>

<body class="d-flex align-items-center justify-content-center bg-body-tertiary" style="height: 100vh;">
    <main class="form-signin w-100">
        <form asp-controller="Account" asp-action="Login" method="post">
            <img class="mb-4" src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">@ViewData["Title"]</h1>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="form-floating">
                <input type="text" id="UserName" name="UserName" class="form-control" asp-for="UserName" placeholder="Username">
                <label for="UserName">Username</label>
            </div>

            <div class="form-floating">
                <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" placeholder="Password">
                <label for="Password">Password</label>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" asp-for="RememberMe" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2">Sign in</button>

            <div class="mt-2">
                <a href="@Url.Action("ForgotPassword", "User")">Forgot Password?</a>
            </div>

            <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
        </form>

        <div class="external-login-container mt-3">
            <p>Or login using:</p>
            <form asp-controller="Account" asp-action="ExternalLogin" method="post" class="text-center">
                <input type="hidden" name="provider" value="Google" />
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fab fa-google"></i> Google
                </button>
            </form>
        </div>
    </main>
</body>